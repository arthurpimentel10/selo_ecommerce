<h2>Excluir Produto</h2>
<br>
<form action="/excluir_produto" method="post">
    <label for="nome">Nome do Produto:</label><br>
    <input type="text" name="nome" placeholder="Nome"><br>
    <label for="tamanho">Tamanho do Produto:</label><br>
    <input type="text" name="tamanho" placeholder="G"><br>
    <label for="precoUnitario">Preço unitário do Produto:</label><br>
    <input type="text" name="precoUnitario" placeholder="unitário"><br>
    <br><br>
    <button type="submit">Enviar</button>
</form>
{{#if msg1}}
    <p>{{msg1}}</p>
{{else}}
    <p>{{msg2}}</p>
{{/if}} 


<link rel="stylesheet" href="/css/editar_produto.css">